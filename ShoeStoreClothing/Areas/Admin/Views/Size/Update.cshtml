@model ShoeStoreClothing.ViewModels.EditSizeViewModel
@{
    Layout = "_LayoutAdmin";
}

<div class="container mt-5">
    <h2>Update Size</h2>

    <form asp-area="Admin" asp-controller="Size" asp-action="Update" method="post" class="needs-validation">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label asp-for="SizeID" class="control-label">Size Name</label>
            <input asp-for="SizeID" class="form-control" type="color" />
            <span asp-validation-for="SizeID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SizeName" class="control-label">Size Name</label>
            <input asp-for="SizeName" class="form-control" type="color" />
            <span asp-validation-for="SizeName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-area="Admin" asp-controller="Size" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@model ShoeStoreClothing.ViewModels.ListDiscountViewModel
@{
	Layout = "_LayoutAdmin";
}
@section Search {
	<div class="col-md-5 col-lg-3 order-3 order-md-2">
		<div class="xp-searchbar">
			<form asp-area="Admin" asp-action="Index" asp-controller="Discount">
				<div class="input-group">
					<input type="search" name="search" class="form-control"
						   placeholder="Search">
					<div class="input-group-append">
						<button class="btn" type="submit" id="button-addon2">
							Go
						</button>
					</div>
				</div>
			</form>
		</div>
	</div>
}
<div class="main-content">
	<div class="row">
		<div class="col-md-12">
			<div class="table-wrapper">

				<div class="table-title">
					<div class="row">
						<div class="col-sm-6 p-0 flex justify-content-lg-start justify-content-center">
							<h2 class="ml-lg-2">Manage  Blog</h2>
						</div>
						<div class="col-sm-6 p-0 flex justify-content-lg-end justify-content-center">
							<a href="/Admin/Discount/Add" class="btn btn-success">
								<i class="material-icons">&#xE147;</i>
								<span>Add New Discount</span>
							</a>
							<a href="#deleteEmployeeModal" class="btn btn-danger" data-toggle="modal">
								<i class="material-icons">&#xE15C;</i>
								<span>Delete</span>
							</a>
						</div>
					</div>
				</div>
				@if (TempData["SuccessMessage"] != null)
				{
					<div class="alert alert-success" id="success-message">
						@TempData["SuccessMessage"]
					</div>
				}
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>
								<span class="custom-checkbox">
									<input type="checkbox" id="selectAll">
									<label for="selectAll"></label>
								</span>
							</th>
							<th>ID</th>
							<th>DiscountName</th>
							<th>DiscountDate</th>
							<th>Action</th>
						</tr>
					</thead>

					<tbody>
						@foreach (var item in Model.Discounts)
						{
							<tr>
								<th>
									<span class="custom-checkbox">
										<input type="checkbox" id="checkbox5" name="option[]" value="1">
										<label for="checkbox5"></label>
								</th>
								@* <th>@item.BlogId</th>
								<th>@item.BlogName</th>
								<th>@item.Subject *@
								<th>
								<th>
									<a asp-area="Admin" asp-controller="Discount" asp-action="Update" asp-route-id="@item.DiscountId" class="edit">
										<i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i>
									</a>
									<a href="#deleteColorModal" class="delete" data-toggle="modal">
										<i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i>
									</a>
								</th>
							</tr>
						}
					</tbody>

				</table>

				<div class="clearfix">
					<div class="hint-text">showing <b>5</b> out of <b>25</b></div>

				</div>

			</div>
		</div>

		@section Scripts {
			<script type="text/javascript">
				<script>
					$(document).ready(function () {
						setTimeout(function () {
							$('#success-message').fadeOut('slow');
						}, 2000); // 5 seconds
					});
			</script>
			</script>
		}
		<!----edit-modal end--------->

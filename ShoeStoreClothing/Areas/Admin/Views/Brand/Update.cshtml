@model ShoeStoreClothing.ViewModels.UpdateBrandViewModel
@{
    Layout = "_LayoutAdmin";
}
<div class="container mt-5">
    <h2>Update Brand</h2>
    <form asp-area="Admin" asp-controller="Brand" asp-action="Update" method="post" class="needs-validation">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label asp-for="BrandID" class="control-label">BrandID</label>
            <input asp-for="BrandID" class="form-control" readonly/>
            <span asp-validation-for="BrandID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BrandName" class="control-label">Brand Name</label>
            <input asp-for="BrandName" class="form-control" />
            <span asp-validation-for="BrandName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-area="Admin" asp-controller="Brand" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@model ShoeStoreClothing.ViewModels.ListInvoiceViewModel
@{
	Layout = "_LayoutAdmin";
}

<div class="main-content">
	<div class="row">
		<div class="col-md-12">
			<div class="table-wrapper">

				<div class="table-title">
					<div class="row">
						<div class="col-sm-6 p-0 flex justify-content-lg-start justify-content-center">
							<h2 class="ml-lg-2">Manage  Invoice</h2>
						</div>
						<div class="col-sm-6 p-0 flex justify-content-lg-end justify-content-center">
							@* <a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal">
								<i class="material-icons">&#xE147;</i>
								<span>Add New Employees</span>
							</a>
							<a href="#deleteEmployeeModal" class="btn btn-danger" data-toggle="modal">
								<i class="material-icons">&#xE15C;</i>
								<span>Delete</span>
							</a> *@
						</div>
					</div>
				</div>

				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>
								<span class="custom-checkbox">
									<input type="checkbox" id="selectAll">
									<label for="selectAll"></label>
							</th>
							<th>ID</th>
							<th>Customer</th>
							<th>TotalAmount</th>
							<th>TotalDiscount</th>
							<th>PaymentMethod</th>
							<th>FinalAmount</th>
							<th>Action</th>
							<th>Actions</th>
						</tr>
					</thead>

					<tbody>
						@foreach(var item in Model.invoices)
						{
							<tr>
								<th>
									<span class="custom-checkbox">
										<input type="checkbox" id="checkbox1" name="option[]" value="1">
										<label for="checkbox1"></label>
								</th>
								<th>@item.InvoiceID</th>
								<th>@item.User?.FullName</th>
								<th>@item.TotalAmount</th>
								<th>@item.TotalDiscount</th>
								<th>@item.FinalAmount</th>
								<th>@item.PaymentMethod</th>
								<th>@(item.Action==1?"Đã Xử Lý":"Chưa Xử Lý")</th>
								<th>
									<a asp-controller="Invoice" asp-area="Admin" asp-action="Detail" asp-route-id="@item.InvoiceID" class="detail">
										<i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i>
									</a>
								</th>
							</tr>

						}
					</tbody>

				</table>

				<div class="clearfix">
					<div class="hint-text">showing <b>5</b> out of <b>25</b></div>
					@if (Model.TotalPage > 0)
					{
						<ul class="pagination">
							<li class="page-item disabled"><a href="#">Previous</a></li>
							@for (int i = 1; i <= Model.TotalPage; i++)
							{
								<li class="page-item "><a href="/Admin/Invoice/Index?search=@Model.search&page=@i" class="page-link">@i</a></li>
							}
							<li class="page-item "><a href="#" class="page-link">Next</a></li>
						</ul>
					}
				</div>

			</div>
		</div>
		
@model ShoeStoreClothing.ViewModels.ColorViewModel
@{
    Layout = "_LayoutAdmin";
}

<div class="container mt-5">
    <h2>Create New Color</h2>

    <form asp-area="Admin" asp-controller="Color" asp-action="Create" method="post" class="needs-validation">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label asp-for="ColorName" class="control-label">Color Code</label>
            <input asp-for="ColorName" class="form-control" type="color" />
            <span asp-validation-for="ColorName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-area="Admin" asp-controller="Color" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

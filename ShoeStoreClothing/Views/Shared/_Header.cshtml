@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> signInManager
<header class="header_area">
    <div class="classy-nav-container breakpoint-off d-flex align-items-center justify-content-between">
        <!-- Classy Menu -->
        <nav class="classy-navbar" id="essenceNav">
            <!-- Logo -->
            <a class="nav-brand" asp-action="Index" asp-controller="Home"><img src="~/img/core-img/logo.png" alt=""></a>
            <!-- Navbar Toggler -->
            <div class="classy-navbar-toggler">
                <span class="navbarToggler"><span></span><span></span><span></span></span>
            </div>
            <!-- Menu -->
            <div class="classy-menu">
                <!-- close btn -->
                <div class="classycloseIcon">
                    <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                </div>
                <!-- Nav Start -->
                <div class="classynav">
                    <ul>
                        <li>
                            <a asp-controller="Home" asp-action="Shop">Shop</a>
                        </li>
                        <li>
                            <a href="#">Pages</a>
                            <ul class="dropdown">
                                <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                                <li><a asp-action="Shop" asp-controller="Home">Shop</a></li>
                                <li><a asp-action="blog" asp-controller="Blog">Blog</a></li>
                                <li><a asp-action="singleblog" asp-controller="Blog">Single Blog</a></li>
                                <li><a href="/regular-page">Regular Page</a></li>
                                <li><a asp-action="contact" asp-controller="Contact">Contact</a></li>
                            </ul>
                        </li>
                        <li><a asp-action="blog" asp-controller="Blog">Blog</a></li>
                        <li><a asp-action="contact" asp-controller="Contact">Contact</a></li>
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li><a asp-action="Chat" asp-controller="Home" id="loadAllMessageUser">Chat</a></li>
                        }
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li><a asp-action="ManagerComment" asp-controller="Comment" id="loadAllMessageUser">Review</a></li>
                        }
                    </ul>
                </div>
                <!-- Nav End -->
            </div>
        </nav>

        <!-- Header Meta Data -->
        <div class="header-meta d-flex clearfix justify-content-end">
            <!-- Search Area -->
            <div class="search-area">
                <form action="#" method="post">
                    <input type="search" name="search" id="headerSearch" placeholder="Type for search">
                    <button type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                </form>
            </div>
            <!-- Favourite Area -->
            <div class="favourite-area">
                <a href="/Order"><img src="~/img/core-img/order-history.png" alt=""></a>
            </div>
            <!-- User Login Info -->
            <div class="user-login-info">
                <a href="/Account/Profile"><img src="~/img/core-img/user.svg" alt=""></a>
            </div>
            <!-- Cart Area -->
            <div class="cart-area">
                <a href="#" id="essenceCartBtn"><img src="~/img/core-img/bag.svg" alt="">@await Component.InvokeAsync("NumberCart")</a>
            </div>
            <div class="user-login-info notification-area">
                <a href=""><img src="~/img/core-img/notificationActive.png" alt="" id="notificationBtn"></a>
                <div class="notification-dropdown" id="notificationDropdown">
                    
                </div>
            </div>
        </div>

    </div>
</header>
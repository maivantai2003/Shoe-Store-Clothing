@model ShoeStoreClothing.ViewModels.LoginViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <form method="post" action="/Account/Login" class="p-4 border rounded shadow-lg bg-white">
                <!-- Hidden field for ReturnUrl -->
                <input type="hidden" name="ReturnUrl" value="@ViewData["returnUrl"]" />

                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Email Field -->
                <div class="form-outline mb-4">
                    <input type="email" asp-for="Email" id="email" class="form-control" placeholder="Enter your email" />
                    <label for="email" class="form-label">Email address</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Password Field -->
                <div class="form-outline mb-4">
                    <input type="password" asp-for="Password" id="password" class="form-control" placeholder="Enter your password" />
                    <label for="password" class="form-label">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Remember Me and Forgot Password -->
                <div class="row mb-4">
                    <div class="col d-flex align-items-center">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="RememberMe" id="rememberMe" />
                            <label class="form-check-label" for="rememberMe">Remember me</label>
                        </div>
                    </div>
                    <div class="col text-end">
                        <a href="#!" class="text-decoration-none">Forgot password?</a>
                    </div>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary btn-block w-100 mb-3">Sign in</button>

                <!-- Other Options -->
                <div class="text-center">
                    <p>Not a member? <a href="/Account/Register" class="text-primary text-decoration-none">Register</a></p>
                    <p class="my-3">or sign in with:</p>

                    <div class="d-flex justify-content-center">
                        <button type="button" class="btn btn-outline-primary btn-floating mx-2">
                            <i class="fab fa-facebook-f"></i>
                        </button>
                        <button type="button" class="btn btn-outline-danger btn-floating mx-2">
                            <i class="fab fa-google"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
